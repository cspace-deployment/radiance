<%# Link to the "Previous" page
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.first? %>
    <li class="page-item disabled">
      <%= link_to raw(t 'views.pagination.previous'),
        '#',
        :rel => 'prev',
        :onclick => 'return false;',
        class: 'page-link',
        disabled: true,
        aria: {
          label: t('views.pagination.aria.go_to_previous_page')
        }
      %>
    </li>
<% else %>
    <li class="page-item">
      <%= link_to raw(t 'views.pagination.previous'),
        with_screen_reader_alert(
          url,
          sr_alert="page #{number_with_delimiter(current_page - 1, {delimiter: ','})} loaded"
        ),
        :id => 'pagination-prev',
        :rel => 'prev',
        :remote => remote,
        class: 'page-link',
        aria: { label: t('views.pagination.aria.go_to_previous_page') }
      %>
    </li>
<% end %>


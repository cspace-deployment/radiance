<%# Link to the "Previous" page
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% next_focus_target = %>
<%= link_to_unless current_page.first?,
  raw(t 'views.pagination_compact.previous'),
  with_screen_reader_alert(
    url,
    sr_alert="page #{number_with_delimiter(current_page - 1, {delimiter: ','})} loaded",
    focus_target=['#pagination-compact-prev', '#pagination-compact-next']
  ),
  :id => 'pagination-compact-prev',
  :rel => 'prev',
  :remote => remote
%>
